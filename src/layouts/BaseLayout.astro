---
// src/layouts/BaseLayout.astro
import type { City } from '../types';
import { generateLocalBusinessSchema, generateServiceSchema, generateBreadcrumbSchema, generateWebSiteSchema } from '../utils/schema';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  city: City;
  ogImage?: string;
}

const { title, description, city, ogImage } = Astro.props;

// Utiliser le domaine de la ville ou fallback sur le hostname actuel
const currentDomain = city.domain || Astro.url.hostname;
// Ajouter www. seulement si le domaine ne commence pas déjà par www.
const fullDomain = currentDomain.startsWith('www.') ? currentDomain : `www.${currentDomain}`;
const canonicalURL = new URL(Astro.url.pathname, `https://${fullDomain}`);
const defaultOgImage = new URL('/images/og-default.jpg', `https://${fullDomain}`);
const ogImageURL = ogImage ? new URL(ogImage, `https://${fullDomain}`) : defaultOgImage;

// Schema.org enrichis
const localBusinessSchema = generateLocalBusinessSchema(city, canonicalURL.href);
const serviceSchema = generateServiceSchema(city);
const breadcrumbSchema = generateBreadcrumbSchema(city, canonicalURL.href);
const webSiteSchema = generateWebSiteSchema(city);
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImageURL}>
  <meta property="og:locale" content="fr_FR">
  <meta property="og:site_name" content={`Expert Humidité ${city.name}`}>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImageURL}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <meta name="theme-color" content="#3B82F6">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(webSiteSchema)} />
</head>

<body class="font-sans text-gray-800 antialiased">
  <slot />

  <!-- Smooth scroll pour les ancres -->
  <script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
</body>
</html>
