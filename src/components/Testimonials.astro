---
// src/components/Testimonials.astro
interface Props {
  city: {
    name: string;
    neighborhoods?: string[];
  };
}

const { city } = Astro.props;

// Témoignages avec ville uniquement (pas de quartier)
const testimonials = [
  {
    name: "Marie L.",
    location: city.name,
    rating: 5,
    text: "Expert indépendant très professionnel qui a su identifier rapidement l'origine des remontées capillaires dans ma maison. Rapport détaillé sous 10 jours avec photos et solutions concrètes. Je recommande vivement.",
    problem: "Remontées capillaires"
  },
  {
    name: "Thomas B.",
    location: city.name,
    rating: 5,
    text: "Intervention rapide et diagnostic précis. Les préconisations ont permis de résoudre définitivement nos problèmes de moisissures dans notre appartement. Excellent suivi.",
    problem: "Moisissures"
  },
  {
    name: "Sophie D.",
    location: city.name,
    rating: 5,
    text: "Nous avions des infiltrations dans notre immeuble. L'expert nous a fourni un rapport complet qui nous a permis de faire les travaux nécessaires en toute confiance.",
    problem: "Infiltrations"
  },
  {
    name: "Jean-Pierre M.",
    location: city.name,
    rating: 5,
    text: "Très satisfait de la prestation. L'expert indépendant a pris le temps d'expliquer les causes du problème et les solutions possibles. Rapport très professionnel.",
    problem: "Condensation"
  }
];
---

<section id="temoignages" class="py-16 md:py-24 bg-white">
  <div class="container mx-auto px-4 max-w-6xl">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
      Ils nous ont fait confiance à {city.name}
    </h2>

    <p class="text-lg text-gray-600 mb-12 text-center max-w-3xl mx-auto">
      Découvrez les retours d'expérience de nos clients satisfaits
    </p>

    <div class="grid md:grid-cols-2 gap-6 mb-12">
      {testimonials.map((testimonial) => (
        <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
          {/* En-tête du témoignage */}
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 font-bold text-lg">
                  {testimonial.name.charAt(0)}
                </span>
              </div>
              <div>
                <h3 class="font-bold text-gray-900">{testimonial.name}</h3>
                <p class="text-sm text-gray-600">{testimonial.location}</p>
              </div>
            </div>
            {/* Étoiles */}
            <div class="flex gap-0.5">
              {Array.from({ length: testimonial.rating }).map((_, i) => (
                <svg key={i} class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>

          {/* Texte du témoignage */}
          <p class="text-gray-700 leading-relaxed mb-4 italic">
            "{testimonial.text}"
          </p>

          {/* Badge du problème traité */}
          <div class="flex items-center gap-2">
            <span class="text-xs text-gray-500">Problème traité :</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
              {testimonial.problem}
            </span>
          </div>
        </div>
      ))}
    </div>

    {/* Statistiques */}
    <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl p-8">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">5000+</div>
          <div class="text-sm text-gray-600">Expertises réalisées</div>
        </div>
        <div>
          <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">98%</div>
          <div class="text-sm text-gray-600">Clients satisfaits</div>
        </div>
        <div>
          <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">15+</div>
          <div class="text-sm text-gray-600">Années d'expérience</div>
        </div>
      </div>
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-4">Rejoignez nos nombreux clients satisfaits</p>
      <a href="#formulaire" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-lg shadow-lg transition-all duration-200 hover:shadow-xl">
        Demander mon expertise
      </a>
    </div>
  </div>
</section>
