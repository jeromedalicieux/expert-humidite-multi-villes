---
// src/components/Footer.astro
import type { City } from '../types';

interface Props {
  city: City;
}

const { city } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Logo & Description -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-bold text-white mb-4">
          Expert Humidité {city.name}
        </h3>
        <p class="text-gray-400 mb-4">
          Diagnostic et expertise professionnelle des problèmes d'humidité dans le {city.department}.
          Expert indépendant, certifié et assuré.
        </p>
        <div class="flex items-center gap-2 text-gray-400">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{city.name} et {city.region}</span>
        </div>
      </div>

      <!-- Liens rapides -->
      <div>
        <h4 class="text-white font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a href="#presentation" class="hover:text-white transition-colors">Nos services</a>
          </li>
          <li>
            <a href="#faq" class="hover:text-white transition-colors">FAQ</a>
          </li>
          <li>
            <a href="#formulaire" class="hover:text-white transition-colors">Contact</a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-semibold mb-4">Contact</h4>
        <ul class="space-y-2 text-gray-400">
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:contact@${city.domain}`} class="hover:text-white transition-colors">
              contact@{city.domain}
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>+33 X XX XX XX XX</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Séparateur -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <p class="text-gray-400 text-sm text-center md:text-left">
          © {currentYear} Expert Humidité {city.name}. Tous droits réservés.
        </p>

        <!-- Liens légaux -->
        <div class="flex flex-wrap justify-center gap-4 text-sm">
          <a href="/mentions-legales" class="text-gray-400 hover:text-white transition-colors">
            Mentions légales
          </a>
          <a href="/politique-confidentialite" class="text-gray-400 hover:text-white transition-colors">
            Politique de confidentialité
          </a>
          <a href="/cgv" class="text-gray-400 hover:text-white transition-colors">
            CGV
          </a>
        </div>
      </div>

      <!-- Signature -->
      <p class="text-center text-gray-500 text-xs mt-6">
        Site web professionnel pour expert en diagnostic humidité
      </p>
    </div>
  </div>
</footer>
