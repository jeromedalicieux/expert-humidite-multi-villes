---
// src/components/Footer.astro
import type { City } from '../types';

interface Props {
  city: City;
}

const { city } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300 py-12">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Logo & Description -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-bold text-white mb-4">
          Expert Humidité {city.name}
        </h3>
        <p class="text-gray-400 mb-4">
          Diagnostic et expertise professionnelle indépendante des problèmes d'humidité dans le {city.department}.
          Expert 100% indépendant, certifié et assuré. Aucune vente de travaux.
        </p>
        <div class="flex items-center gap-2 text-gray-400">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{city.name} et {city.region}</span>
        </div>
      </div>

      <!-- Liens rapides -->
      <div>
        <h4 class="text-white font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a href="#presentation" class="hover:text-white transition-colors">Nos services</a>
          </li>
          <li>
            <a href="#faq" class="hover:text-white transition-colors">FAQ</a>
          </li>
          <li>
            <a href="#formulaire" class="hover:text-white transition-colors">Contact</a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-semibold mb-4">Nous contacter</h4>
        <p class="text-gray-400 mb-3">
          Pour toute demande d'expertise humidité à {city.name}, remplissez notre formulaire de contact.
        </p>
        <a href="#formulaire" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200">
          Formulaire de contact
        </a>
      </div>
    </div>

    <!-- Séparateur -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col items-center gap-4">
        <!-- Copyright -->
        <p class="text-gray-400 text-sm text-center">
          © {currentYear} Expert Humidité {city.name}. Tous droits réservés.
        </p>

        <!-- Liens légaux -->
        <div class="flex gap-4 text-sm">
          <a href="/mentions-legales" class="text-gray-400 hover:text-white transition-colors">
            Mentions légales
          </a>
        </div>

        <!-- Signature -->
        <p class="text-center text-gray-500 text-xs">
          Site web professionnel pour expert en diagnostic humidité
        </p>
      </div>
    </div>
  </div>
</footer>
